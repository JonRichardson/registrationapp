<h1>Registration Page</h1>

<!-- Form for user input; submitting the form calls the registeruser method in the controller -->
<form action = "/register/registeruser" method = "post">
  <label for="first_name">First Name:</label>
  <input type="text" name="first_name"/><br>
  <label for="last_name">Last Name:</label>
  <input type="text" name="last_name"/><br>
  <label for="street">Street Address:</label>
  <input type="text" name="street"/><br>
  <input type="text" name="street_two"/><br>
  <label for="city">City:</label>
  <input type="text" name="city"/>
  <label for="state">State:</label>
  <input type="text" name="state"/>
  <label for="zip">Zip Code:</label>
  <input type="text" name="zip" pattern="[0-9]{5}"/><br>
  <label for="country">Country:</label>
  <input type="text" name="country"/><br>
  <label for="phone1">Phone 1:</label>
  <input type="text" name="phone1"/><br>
  <label for="phone2">Phone 2:</label>
  <input type="text" name="phone2"/><br>
  <label for="phone3">Phone 3:</label>
  <input type="text" name="phone3"/><br>
  <label for="email">Email:</label>
  <input type="text" name="email"/><br><br>
  <label for="username">*Username:</label>
  <input type="text" name="username" required/><br>
  <label for="password">*Password:</label>
  <input type="text" name="password" required/><br>
  * Required Fields<br><br>
  <input type="submit" value="Submit"/>
</form>
