<h1>Registration Page</h1>

<!--flash notice if username is taken-->
<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>

<!-- Form for user input; submitting the form calls the registeruser method in the controller -->
<div class="container">
  <form action = "/register/register_user" method = "post">
    <label for="first_name">*First Name:</label>
    <input type="text" name="first_name" required/><br>
    <label for="last_name">*Last Name:</label>
    <input type="text" name="last_name" required/><br>
    <label for="street">*Street Address:</label>
    <input type="text" name="street" required/><br>
    <label for="street"></label>
    <input type="text" name="street_two"/><br>
    <label for="city">*City:</label>
    <input type="text" name="city" required/><br>
    <label for="state">*State:</label>
    <input type="text" name="state" required/><br>
    <label for="zip">*Zip Code:</label>
    <input type="text" name="zip" pattern="[0-9]{5}" required/><br>
    <label for="country">*Country:</label>
    <input type="text" name="country" required/><br>
    <label for="phone1">Phone 1:</label>
    <input type="text" name="phone1" placeholder="555-555-5555"/><br>
    <label for="phone2">Phone 2:</label>
    <input type="text" name="phone2" placeholder="555-555-5555"/><br>
    <label for="phone3">Phone 3:</label>
    <input type="text" name="phone3" placeholder="555-555-5555"/><br>
    <label for="email">*Email:</label>
    <input type="text" name="email" required/><br><br>
    <label for="username">*Username:</label>
    <input type="text" name="username" required/><br>
    <label for="password">*Password:</label>
    <input type="password" name="password" required min="6"/>
    <h5>Password must:</h5>
    <ul>
      <li>Be at least 6 characters</li>
      <li>Include $, #, and/or !</li>
      <li>Include at least one uppercase and lowercase letter.</li>
      <li>Include at least one number</li>
    </ul>
    <h6>* Indicates a required field</h6><br>
    <input type="submit" value="Submit"/>
  </form>
</div>

<p>Already a member? Click <a href="/register/login">here</a> to log in</p>
